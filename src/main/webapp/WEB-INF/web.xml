<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>TourStore</servlet-name>
        <servlet-class>ru.innopolis.tourstore.servlets.TourViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TourStore</servlet-name>
        <url-pattern>/store</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TourCreateServlet</servlet-name>
        <servlet-class>ru.innopolis.tourstore.servlets.TourCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TourCreateServlet</servlet-name>
        <url-pattern>/store/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TourDeleteServlet</servlet-name>
        <servlet-class>ru.innopolis.tourstore.servlets.TourDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TourDeleteServlet</servlet-name>
        <url-pattern>/store/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TourEditServlet</servlet-name>
        <servlet-class>ru.innopolis.tourstore.servlets.TourEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TourEditServlet</servlet-name>
        <url-pattern>/store/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>ru.innopolis.tourstore.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserValidatorServlet</servlet-name>
        <servlet-class>ru.innopolis.tourstore.servlets.UserValidatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserValidatorServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ru.innopolis.tourstore.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StatisticsServlet</servlet-name>
        <servlet-class>ru.innopolis.tourstore.servlets.StatisticsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatisticsServlet</servlet-name>
        <url-pattern>/stat</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TourOrderServlet</servlet-name>
        <servlet-class>ru.innopolis.tourstore.servlets.TourOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TourOrderServlet</servlet-name>
        <url-pattern>/store/order</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>UserCheckFilter</filter-name>
        <filter-class>ru.innopolis.tourstore.filter.UserCheckFilter</filter-class>
        <init-param>
            <param-name>loginActionURI</param-name>
            <param-value>/Servlet/userValidator</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>UserCheckFilter</filter-name>
        <url-pattern>/store/delete</url-pattern>
        <url-pattern>/store/edit</url-pattern>
        <url-pattern>/store/create</url-pattern>
        <url-pattern>/stat</url-pattern>
    </filter-mapping>

    <resource-ref>
        <res-ref-name>jdbc/tourstore</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>