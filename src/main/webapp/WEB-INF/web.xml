<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <filter>
        <filter-name>UserCheckFilter</filter-name>
        <filter-class>ru.innopolis.tourstore.filter.UserCheckFilter</filter-class>
        <init-param>
            <param-name>loginActionURI</param-name>
            <param-value>/Servlet/userValidator</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>UserCheckFilter</filter-name>
        <url-pattern>/store/delete</url-pattern>
        <url-pattern>/store/edit</url-pattern>
        <url-pattern>/store/create</url-pattern>
        <url-pattern>/stat</url-pattern>
    </filter-mapping>

    <resource-ref>
        <res-ref-name>jdbc/tourstore</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/beans.xml</param-value>
    </context-param>

    <servlet>
        <servlet-name>TourStore</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TourStore</servlet-name>
        <url-pattern>/store</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TourCreate</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TourCreate</servlet-name>
        <url-pattern>/store/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TourDelete</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TourDelete</servlet-name>
        <url-pattern>/store/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TourEdit</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TourEdit</servlet-name>
        <url-pattern>/store/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TourOrder</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TourOrder</servlet-name>
        <url-pattern>/store/order</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Statistics</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Statistics</servlet-name>
        <url-pattern>/stat</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

</web-app>